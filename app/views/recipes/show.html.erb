<h2 class="subheader page-title"><%= @recipe.title %></h2>
<h2 class="subheader page-rating"><%= rating_for @recipe, "overall" %></h2>
<div class="row recipe">
  <div class="large-4 columns"><%= link_to image_tag(@recipe.image.url) %></div>
  <div class="large-4 columns"><h3>Ingredients</h3><%= @recipe.description %></div>  
  <div class="large-4 columns"><h3>Directions</h3><%= @recipe.text %></div>
</div>

